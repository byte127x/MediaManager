<Window x:Class="MediaManager.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaManager.Dialogs"
        mc:Ignorable="d"
        Background="Transparent"
        Title="SettingsDialog" Height="450" Width="800">
    <Border Margin="10" Style="{StaticResource CardFrame}">
        <StackPanel Margin="10">

            <TextBlock Text="Settings:" FontSize="32"/>
            <Separator Grid.Row="1" Background="#24ffffff" Margin="0,5"/>
            <ComboBox HorizontalAlignment="Left">
                <ComboBoxItem Content="Hello" Foreground="Black"/>
                <ComboBoxItem Content="World" Foreground="Black"/>
                <ComboBoxItem Content=":3" Foreground="Black"/>
            </ComboBox>
        </StackPanel>
    </Border>
</Window>
