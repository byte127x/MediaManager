<UserControl x:Class="MediaManager.Widgets.AddFolderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.Widgets"
             xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200">

    <Border CornerRadius="10" Name="MainBorder" Margin="5" Background="#00ffffff" BorderThickness="1" BorderBrush="Transparent">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Source="../Lib/albumicon.png" Name="MainIcon"/>

            <TextBlock x:Name="albumText" Text="Add Folder +" Grid.Row="1" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Grid>
    </Border>
</UserControl>
