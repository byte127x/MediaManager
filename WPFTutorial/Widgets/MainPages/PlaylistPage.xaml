<UserControl x:Class="MediaManager.Widgets.MainPages.PlaylistPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.Widgets.MainPages"
             xmlns:wgts="clr-namespace:MediaManager.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid Name="InternalGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <wgts:DynamicAlbumContainer x:Name="AlbumContainer" HorizontalContentAlignment="Stretch" Margin="15"/>
        <wgts:AddFolderButton x:Name="AddPlaylistBtn"/>
    </Grid>
</UserControl>
