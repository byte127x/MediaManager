             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Border Style="{StaticResource CardFrame}">
        <TextBox VerticalAlignment="Center" Margin="5,0" Background="#00000000" BorderThickness="0" Foreground="White" x:Name="InternalText"/>
    </Border>
</UserControl>
